# ShitPostBot Environment Configuration
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to git - it contains sensitive information!

# ============================================================================
# TELEGRAM BOT
# ============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram user ID (get it from @userinfobot)
# Only this user can control the bot via Telegram
TELEGRAM_ADMIN_ID=your_telegram_user_id_here

# ============================================================================
# OPENAI API
# ============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# GEMINI API (Free Alternative to OpenAI)
# ============================================================================
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# INSTAGRAM / META
# ============================================================================
# Get these from Meta Developers Dashboard: https://developers.facebook.com/
# These are for Business/Creator Account access
IG_USER_ID=your_instagram_user_id
IG_ACCESS_TOKEN=your_instagram_access_token
IG_APP_ID=your_meta_app_id
IG_APP_SECRET=your_meta_app_secret

# ============================================================================
# AWS S3 (REQUIRED for Instagram Publishing via Graph API)
# ============================================================================
# Instagram Graph API requires videos to be hosted at a public URL
# S3 is used to temporarily host videos before Instagram downloads them
S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================================================
# ANTHROPIC API (Optional - alternative to OpenAI)
# ============================================================================
# If you want to use Anthropic's Claude instead of OpenAI
# Leave empty to use OpenAI by default
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# ENVIRONMENT
# ============================================================================
# Set to 'production' for live Instagram posting
# Set to 'development' for testing without posting
ENVIRONMENT=development
